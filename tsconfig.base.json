{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@solokey/shared": ["packages/shared/src/index.ts"],
      "@solokey/shared/*": ["packages/shared/src/*"]
    }
  }
}
